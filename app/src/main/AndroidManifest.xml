<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="rhs.recipeapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".WelcomeActivity" />
        <activity
            android:name=".BrowseActivity"
            android:label="@string/title_activity_browse"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".CatActivity" />
        <activity android:name=".TipsActivity" />
        <activity
            android:name=".FavsActivity"
            android:label="@string/title_activity_favs"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings" />
        <activity
            android:name=".RecipeInput"
            android:label="@string/title_activity_recipe_input"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Display"
            android:label="@string/title_activity_display"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>