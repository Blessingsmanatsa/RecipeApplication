<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="rhs.recipeapp.RecipeInput"
    tools:showIn="@layout/activity_recipe_input">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:weightSum="1">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recipeName"
            android:capitalize="words"
            android:clickable="true"
            android:editable="true"
            android:hint="Recipe Name"
            android:text="Cookies" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/times"
            android:clickable="true"
            android:capitalize="words"
            android:editable="true"
            android:hint="Time (Total, Prep, Cook)"
            android:text="20 min total, 10 min prep, 10 min cook" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/servingSize"
            android:clickable="true"
            android:capitalize="words"
            android:editable="true"
            android:textIsSelectable="true"
            android:hint="Serving Size"
            android:text="makes 12 cookies" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ingredients"
            android:capitalize="words"
            android:clickable="true"
            android:editable="true"
            android:hint="Ingredients with Quantities"
            android:text="1 cup of flour, 2 eggs, 1/2 cup of milk" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/instructions"
            android:clickable="true"
            android:editable="true"
            android:hint="Instructions "
            android:layout_weight="0.40"
            android:text="mix all ingredients, bake for 10min" />

    </LinearLayout>
</RelativeLayout>
